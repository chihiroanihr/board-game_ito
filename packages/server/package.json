{
  "name": "@bgi/server",
  "version": "1.0.0",
  "description": "",
  "author": "Rhina Kim <chihiroanihr@gmail.com>",
  "keywords": [],
  "license": "ISC",
  "private": "true",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:check": "tsc -p ./tsconfig.server.json --noEmit",
    "build:watch": "tsc -p ./tsconfig.server.json --watch",
    "build": "npm run clean && tsc -p ./tsconfig.server.json",
    "start": "shx cp ../../.env dist/server/.env && tsc -p ./tsconfig.server.json && node dist/server/src/server.js",
    "start:dev": "shx cp ../../.env .env && ts-node -P tsconfig.server.json ./src/server.ts",
    "start:dev:nodemon": "shx cp ../../.env .env && nodemon"
  },
  "dependencies": {
    "@bgi/shared": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2"
  }
}
